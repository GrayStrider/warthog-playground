{
  "name": "warthog-starter",
  "version": "0.0.0",
  "description": "Warthog GraphQL API minimal example",
  "license": "MIT",
  "author": {
    "name": "Dan Caddigan",
    "url": "https://github.com/goldcaddy77"
  },
  "scripts": {
    "bootstrap": "yarn && yarn dotenv:generate && yarn db:drop && yarn db:create && yarn codegen && yarn db:seed:dev",
    "build": "yarn tsc",
    "check:code": "tsc --noEmit && yarn lint && prettier ./{src,test,tools}/**/*.ts --write",
    "codegen": "warthog codegen && rm warthog.sqlite.tmp",
    "config:dev": "WARTHOG_ENV=development yarn dotenv:generate",
    "config:prod": "WARTHOG_ENV=production yarn dotenv:generate",
    "dotenv:generate": "dotenvi -s ${WARTHOG_ENV:-development}",
    "db:create": "warthog db:create",
    "db:drop": "warthog db:drop",
    "db:migrate:generate": "warthog db:migrate:generate --name",
    "db:migrate": "warthog db:migrate",
    "db:seed:dev": "ts-node tools/seed.ts",
    "lint": "eslint './+(src|test|tools)/**/*.{js,ts}' --fix",
    "list:users": "ts-node ./tools/list-users.ts",
    "playground": "warthog playground",
    "prettier": "prettier ./{src,test,tools}/**/*.ts --write",
    "start": "yarn config:prod && node dist/src/index.js",
    "start:ts": "yarn config:dev && ts-node-dev --type-check src/index.ts",
    "start:ts:watch": "yarn config:dev && nodemon -e ts,graphql -x ts-node --type-check src/index.ts",
    "test": "jest --verbose --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc -p ./tsconfig.json && yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/generated/*"
    ]
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.5",
    "dotenv": "^8.0.0",
    "dotenvi": "^0.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18",
    "warthog": "^1.33.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "dotenv-cli": "^2.0.0",
    "eslint": "^5",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "3.5.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "\\.test\\.ts$"
    ],
    "globalSetup": "<rootDir>/test/globalSetup.ts",
    "globalTeardown": "<rootDir>/test/globalTeardown.ts",
    "setupFilesAfterEnv": [
      "./test/setupFilesAfterEnv.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
