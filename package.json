{
  "name": "warthog-starter",
  "version": "0.0.0",
  "description": "Warthog GraphQL API minimal example",
  "license": "MIT",
  "author": {
    "name": "Dan Caddigan",
    "url": "https://github.com/goldcaddy77"
  },
  "scripts": {
    "bootstrap": "cp .env.example .env && yarn && yarn db:create && yarn codegen && yarn db:seed:dev",
    "build": "yarn tsc",
    "check:code": "tsc --noEmit && yarn lint && prettier ./{src,test,tools}/**/*.ts --write",
    "codegen": "warthog codegen",
    "db:create": "warthog db:create",
    "db:drop": "warthog db:drop",
    "db:seed:dev": "ts-node tools/seed.ts",
    "lint": "eslint './+(src|test|tools)/**/*.{js,ts}' --fix",
    "list:users": "ts-node ./tools/list-users.ts",
    "playground": "warthog playground",
    "prettier": "prettier ./{src,test,tools}/**/*.ts --write",
    "start": "DEBUG=warthog* yarn start:ts",
    "start:ts": "ts-node-dev --type-check src/index.ts",
    "test": "jest --verbose --coverage",
    "watch:ts": "nodemon -e ts,graphql -x ts-node --type-check src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc -p ./tsconfig.json && yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/generated/*"
    ]
  },
  "dependencies": {
    "@types/graphql": "^14.0.4",
    "@types/graphql-iso-date": "^3.3.0",
    "@types/lodash": "^4.14.108",
    "@types/node-emoji": "^1.8.0",
    "@types/pg": "^7.4.8",
    "apollo-server": "^2.6.3",
    "apollo-server-express": "^2.6.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dataloader": "^1.4.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.5.0",
    "lodash": "^4.17.10",
    "pg": "^7.3.0",
    "pgtools": "^0.3.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4",
    "typedi": "^0.8.0",
    "typeorm-typedi-extensions": "^0.2.3",
    "warthog": "^1.32.9"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/faker": "^4.1.2",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.5.7",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "dotenv-cli": "^1.4.0",
    "dotenvi": "^0.5.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "node-emoji": "^1.8.1",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "3.2.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "\\.test\\.ts$"
    ],
    "globalSetup": "<rootDir>/test/globalSetup.ts",
    "globalTeardown": "<rootDir>/test/globalTeardown.ts",
    "setupFilesAfterEnv": [
      "./test/setupFilesAfterEnv.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
